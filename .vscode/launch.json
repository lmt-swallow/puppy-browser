{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'puppy'",
      "cargo": {
        "args": ["build", "--bin=puppy", "--package=puppy"],
        "filter": {
          "name": "puppy",
          "kind": "bin"
        }
      },
      "args": ["open"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'puppy'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=puppy",
          "--package=puppy"
        ],
        "filter": {
          "name": "puppy",
          "kind": "bin"
        }
      },
      "args": ["open"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
